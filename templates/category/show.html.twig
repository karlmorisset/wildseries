{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

   {% for program in programsByCategory %}
        <div>
            <h1></h1>
            <h2>{{ program.id }} / {{ program.title }} - Catégorie : {{ category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            <a href="{{ path("program_show", { program: program.slug }) }}">Voir la fiche</a>
        </div>

    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}