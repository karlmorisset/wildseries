<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />

        <script src="https://kit.fontawesome.com/05714687b5.js" crossorigin="anonymous"></script>

        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="flashes">
            {% for category, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ category }}">
                        {{ message|trans }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        <header>
            {% include "layout/_navbar.html.twig" %}
        </header>

        {% if app.user %}
            <h1>
                {% trans with {'%username%': app.user.email} %}
                    hello_username
                {% endtrans %}
            </h1>
        {% endif %}

        {% block body %}{% endblock %}
    </body>
</html>
