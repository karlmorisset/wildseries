{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>
                <a href="{{ path('program_add_to_watchlist', {'id': program.id}) }}">
                    {% if app.user.isInWatchlist(program) %}
                        Ajouter en favori <i class="far fa-heart"></i>
                    {% else  %}
                        Retirer de la liste des favoris <i class="fas fa-heart"></i>
                    {% endif  %}
                </a>
            </p>
        </div>
    </div>

    <h2>Acteurs :</h2>
    <ul>
        {% for actor in program.actors %}
        <li><a href="{{path('actor_show', {actor: actor.id})}}">{{ actor.name }}</a></li>

        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>

    {% for season in seasons %}
        <div><a href="{{path('program_season_show', { program: program.slug, season: season.id })}}">Saison {{season.number}}</a></div>
    {% endfor %}

    <a href="{{ path('program_edit', {'program': program.slug}) }}">Modifier la série</a>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}